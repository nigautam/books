<h1>Listing books</h1>

<table>
  <tr>
    
    <th>Book Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
<% if book.category == 3 && book.available ==1 %>
  <tr>
    
    <td><%= book.Bookname %></td>
    
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end%>
<% end %>
</table>

