<% @books.each do |book| %>
  <tr>
    <td><%= book.firstName %></td>
    <td><%= book.lastName %></td>
    <td><%= book.email %></td>
    <td><%= book.userName %></td>
    <td><%= book.password %></td>
    <td><%= book.category %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

