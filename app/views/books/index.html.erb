<h1>Sign outs</h1>

<table valign="middle">
  <tr>
    <th>First name&nbsp&nbsp</th>
    <th>Last name&nbsp&nbsp</th>
    <th>Sign out&nbsp&nbsp</th>
    <th>Due date&nbsp&nbsp</th>
    <th>Email&nbsp&nbsp</th>
    <th>User name&nbsp&nbsp</th>
    
    <th>Sign out/On hold&nbsp&nbsp</th>
    <th>Book Title&nbsp&nbsp</th>
    <th></th>
  </tr>

<% @books.each do |book| %>
<% if book.category == 4 || book.category ==5 %>
  <tr>
    <td><%= book.firstName %></td>
    <td><%= book.lastName %></td>
    <td><%= book.signOut %></td>
    <td><%= book.dueDate %></td>
    <td><%= book.email %></td>
    <td><%= book.userName %></td>
    <%if book.category ==4%>
    <td>Sign out</td>
    <%end%>
    <%if book.category ==5%>
    <td>On hold</td>
    <%end%>
    <td><%= book.Bookname %></td>
    
    <td><%= link_to 'Return', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end%>
<% end %>
</table>

<br />

<%= link_to 'New Book', new_book_path %>
<%= link_to 'User Accounts',users_path%>
<%= link_to 'Search', searches_path %>
